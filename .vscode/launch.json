{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "pygeoapi.flask_app:APP",
        "FLASK_ENV": "development",
        "PYGEOAPI_CONFIG": "${workspaceFolder}/pygeoapi.config.yml",
        "PYGEOAPI_OPENAPI": "${workspaceFolder}/local.openapi.yml"
      },
      "args": [
        "run",
        "--host=127.0.0.1",
        "--port=5005"
      ],
      "jinja": true
    },
    {
      "name": "Python Debugger: Starlette",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "pygeoapi.starlette_app:APP",
        "--reload",
        "--port",
        "5005"
      ],
      "env": {
        "PYGEOAPI_CONFIG": "${workspaceFolder}/pygeoapi.config.yml",
        "PYGEOAPI_OPENAPI": "${workspaceFolder}/local.openapi.yml"
      },
      "envFile": "${workspaceFolder}/.env",
      "autoStartBrowser": true
    }
  ]
}